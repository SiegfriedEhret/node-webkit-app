                h3 New dude
                form.pure-form
                    fieldset
                        label(for='firstName') First name
                            input(id='firstName', name='firstName', placeholder='John', type='text')
                        label(for='lastName') Last name
                            input(id='lastName', name='last', placeholder='Doe', type='text')
                        button.pure-button.pure-button-primary(id='submit', type='submit') Save
            .pure-u-1#listing
                h3 Dudes
                ul#listing
            script.
                leDb();
        .pure-g-r
            .pure-u-1
                include includes/commons/_footer

